<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="style/Theme.MaterialComponents.Light.DarkActionBar"
    package="com.example.informaticshandbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InformaticsHandbook">
        <activity
            android:name=".QuizRadioGroupActivity"
            android:noHistory="true"
            android:exported="false" />
        <activity
            android:name=".QuizActivity"
            android:noHistory="true"
            android:exported="false" />
        <activity
            android:name=".QuizListActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"

            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextActivity" />
    </application>

</manifest>